# Stoat backend (fill in real connection strings)
MONGODB=mongodb://database:27017/revolt
REDIS=redis://redis:6379/0

# Authentik OIDC (fill in values from Authentik; ISSUER auto-updated from .env)
AUTHENTIK_ID=
AUTHENTIK_SECRET=
AUTHENTIK_ISSUER=https://sso.example.com/application/o/stoat-admin/

# NextAuth runtime config (SECRET manual; URL auto-updated from .env)
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://admin.example.com

# Values baked into the client bundle (NEXT_PUBLIC_* auto-updated from .env; emails manual)
NEXT_PUBLIC_APP_URL=https://chat.example.com
NEXT_PUBLIC_API_URL=https://chat.example.com/api
NEXT_PUBLIC_CDN_URL=https://chat.example.com/autumn
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com
NEXT_PUBLIC_ABUSE_EMAIL=abuse@example.com
# Uncomment to disable Authentik locally
# NEXT_PUBLIC_AUTH_TYPE=none

# Platform account ID from Revolt.toml (filled by bootstrap script)
PLATFORM_ACCOUNT_ID=

# Optional integrations (manual if you use them)
INTEGRATION_ZAMMAD_ENDPOINT=
INTEGRATION_ZAMMAD_ACCESS_TOKEN=
