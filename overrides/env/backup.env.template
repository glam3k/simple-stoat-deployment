# Stoat backup configuration â€” copy to backup.env and fill in credentials
# Used by bin/stoatctl backup/restore

# S3-compatible backup target
BACKUP_S3_ENDPOINT=https://s3.example.com
BACKUP_S3_BUCKET=stoat-backups
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_REGION=us-east-1

# Retention policy (number of backups to keep)
BACKUP_RETAIN_DAILY=7
BACKUP_RETAIN_WEEKLY=4
BACKUP_RETAIN_MONTHLY=6

# Stoat installation directory on the VPS
STOAT_DIR=/opt/stoat
